{
  "manifest_version": 2,
  "name": "copy-tasks-ext",
  "description": "Copies tasks titles from selected list in Trello",
  "version": "1.0",
  "icons": {
    "16": "icons/edit-copy16.png",
    "48": "icons/edit-copy48.png",
    "128": "icons/edit-copy128.png"
  },
  "content_scripts": [
    {
      "css": [ "copy-trello-tasks.css" ],
      "js": [ "copy-trello-tasks.js"],
      "matches": [ "*://trello.com/b/*" ],
      "run_at": "document_end"
    }
  ],
  "background": {
    "scripts": ["background.js"],
    "persistent": false
  },
  "permissions" : [
    "notifications"
  ]
}
